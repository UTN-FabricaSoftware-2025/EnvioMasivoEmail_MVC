@{
    ViewData["Title"] = "Envio Masivo de Emails";
}

<div class="container mt-4">
    <h2>Envio Masivo de Correos</h2>

    <div class="row">
        <!-- Columna izquierda: Formulario de carga -->
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-upload"></i> Cargar Correos</h5>
                </div>
                <div class="card-body">
                    <form id="uploadForm" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="emailFile" class="form-label">Selecciona archivo .txt con emails</label>
                            <input type="file" class="form-control" id="emailFile" name="emailFile" accept=".txt" required />
                        </div>
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-file-earmark-text"></i> Cargar Emails
                        </button>
                    </form>

                    <!-- Spinner de carga -->
                    <div id="loadingSpinner" class="text-center mt-3" style="display:none;">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Cargando...</span>
                        </div>
                        <p class="mt-2 text-muted" id="loadingText">Procesando...</p>
                    </div>
                </div>
            </div>

            <!-- Card de correos cargados -->
            <div class="card shadow-sm mt-4" id="emailsCard" style="display:none;">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-envelope-check"></i> Correos Cargados</h5>
                    <span class="badge bg-light text-dark" id="countValid">0</span>
                </div>
                <div class="card-body" style="max-height:400px;overflow-y:auto;">
                    <ul id="emailsList" class="list-group list-group-flush"></ul>
                </div>
                <div class="card-footer">
                    <button type="button" class="btn btn-success w-100" id="sendEmailsBtn">
                        <i class="bi bi-send"></i> Enviar Correos
                    </button>
                </div>
            </div>
        </div>

        <!-- Columna derecha: Logs de envío -->
        <div class="col-md-6">
            <div class="card shadow-sm" id="logsCard" style="display:none;">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-list-check"></i> Logs de Envío</h5>
                    <span class="badge bg-light text-dark">
                        <span id="successCount">0</span> exitosos / <span id="errorCount">0</span> errores
                    </span>
                </div>
                <div class="card-body" style="max-height:600px;overflow-y:auto;">
                    <ul id="logsList" class="list-group list-group-flush"></ul>
                </div>
                <div class="card-footer text-center">
                    <button type="button" class="btn btn-secondary" id="clearLogsBtn">
                        <i class="bi bi-trash"></i> Limpiar Logs
                    </button>
                </div>
            </div>

            <!-- Card informativa cuando no hay logs -->
            <div class="card shadow-sm" id="emptyLogsCard">
                <div class="card-body text-center text-muted py-5">
                    <i class="bi bi-info-circle" style="font-size: 3rem;"></i>
                    <p class="mt-3">Los logs de envío aparecerán aquí</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let loadedEmails = [];

        document.getElementById('uploadForm').addEventListener('submit', async function (e) {
            e.preventDefault();

            const fileInput = document.getElementById('emailFile');
            const file = fileInput.files[0];

            if (!file) {
                alert('Por favor selecciona un archivo.');
                return;
            }

            const formData = new FormData();
            formData.append('emailFile', file);

            // Mostrar spinner
            document.getElementById('loadingSpinner').style.display = 'block';
            document.getElementById('loadingText').textContent = 'Cargando emails...';
            document.getElementById('emailsCard').style.display = 'none';

            try {
                const response = await fetch('/Home/UploadEmails', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();
                document.getElementById('loadingSpinner').style.display = 'none';

                if (result.success) {
                    loadedEmails = result.emails;
                    document.getElementById('countValid').textContent = loadedEmails.length;

                    // Llenar lista de emails
                    const emailsList = document.getElementById('emailsList');
                    emailsList.innerHTML = '';
                    loadedEmails.forEach((email, index) => {
                        const li = document.createElement('li');
                        li.className = 'list-group-item d-flex justify-content-between align-items-center';
                        li.innerHTML = `
                            <span><i class="bi bi-envelope"></i> ${email}</span>
                            <span class="badge bg-primary rounded-pill">${index + 1}</span>
                        `;
                        emailsList.appendChild(li);
                    });

                    // Mostrar card de emails
                    document.getElementById('emailsCard').style.display = 'block';

                    // Limpiar input
                    fileInput.value = '';
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                document.getElementById('loadingSpinner').style.display = 'none';
                alert('Error al cargar el archivo: ' + error.message);
            }
        });

        document.getElementById('sendEmailsBtn').addEventListener('click', async function () {
            if (loadedEmails.length === 0) {
                alert('No hay correos cargados.');
                return;
            }

            // Deshabilitar botón durante el envío
            this.disabled = true;
            this.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Enviando...';

            // Mostrar card de logs
            document.getElementById('emptyLogsCard').style.display = 'none';
            document.getElementById('logsCard').style.display = 'block';
            document.getElementById('logsList').innerHTML = '<li class="list-group-item text-center"><div class="spinner-border spinner-border-sm"></div> Enviando correos...</li>';

            try {
                const response = await fetch('/Home/SendBulkEmails', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(loadedEmails)
                });

                const result = await response.json();

                if (result.success) {
                    // Mostrar logs
                    const logsList = document.getElementById('logsList');
                    logsList.innerHTML = '';

                    let successCount = 0;
                    let errorCount = 0;

                    result.logs.forEach((log, index) => {
                        const li = document.createElement('li');
                        li.className = 'list-group-item';

                        // Colorear y contar segun el resultado
                        const normalizedLog = log.toLowerCase();

                        if (normalizedLog.includes('exitos') || normalizedLog.includes('enviado')) {
                            li.classList.add('list-group-item-success');
                            successCount++;
                            li.innerHTML = `<i class="bi bi-check-circle-fill text-success"></i> ${log}`;
                        } else if (normalizedLog.includes('error')) {
                            li.classList.add('list-group-item-danger');
                            errorCount++;
                            li.innerHTML = `<i class="bi bi-x-circle-fill text-danger"></i> ${log}`;
                        } else {
                            li.innerHTML = `<i class="bi bi-info-circle"></i> ${log}`;
                        }
                        logsList.appendChild(li);
                    });

                    // Actualizar contadores
                    document.getElementById('successCount').textContent = successCount;
                    document.getElementById('errorCount').textContent = errorCount;

                    // Limpiar datos de emails cargados
                    loadedEmails = [];
                    document.getElementById('emailsCard').style.display = 'none';
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                alert('Error al enviar correos: ' + error.message);
            } finally {
                // Rehabilitar botón
                this.disabled = false;
                this.innerHTML = '<i class="bi bi-send"></i> Enviar Correos';
            }
        });

        document.getElementById('clearLogsBtn').addEventListener('click', function () {
            document.getElementById('logsCard').style.display = 'none';
            document.getElementById('emptyLogsCard').style.display = 'block';
            document.getElementById('logsList').innerHTML = '';
        });
    </script>
}
